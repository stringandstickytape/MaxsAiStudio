{
  "compilerOptions": {
    "target": "esnext",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "module": "ESNext",
    "moduleResolution": "bundler", // Changed this line
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true // Added this line
  },
  "include": [ "src" ]
}