<Window x:Class="AiStudio4.Dialogs.LicensesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiStudio4.Dialogs"
        mc:Ignorable="d"
        Title="Software Licenses" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Software Licenses" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="LicensesTextBox" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" />
        </ScrollViewer>
        
        <Button Grid.Row="2" Content="Close" HorizontalAlignment="Right" Margin="0,10,0,0" Padding="20,5" Click="CloseButton_Click"/>
    </Grid>
</Window>