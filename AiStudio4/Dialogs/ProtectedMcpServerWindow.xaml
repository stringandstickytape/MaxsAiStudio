<Window x:Class="AiStudio4.Dialogs.ProtectedMcpServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Protected MCP Server" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Protected MCP Server Management" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="10" 
                   HorizontalAlignment="Center"/>

        <!-- Server Status -->
        <GroupBox Grid.Row="1" Header="Server Status" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Status: " FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusTextBlock" Text="Stopped" Foreground="Red" VerticalAlignment="Center" Margin="5,0"/>
                <Button x:Name="StartStopButton" Content="Start Server" Width="100" Height="30" Margin="20,0" Click="StartStopButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Server Configuration -->
        <GroupBox Grid.Row="2" Header="Server Configuration" Margin="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Server URL:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="ServerUrlTextBox" Grid.Row="0" Grid.Column="1" Margin="10,5" IsReadOnly="True" Text="http://localhost:7071/"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="OAuth Server URL:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="OAuthServerUrlTextBox" Grid.Row="1" Grid.Column="1" Margin="10,5" IsReadOnly="True" Text="http://localhost:7029"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Resource Metadata:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="ResourceMetadataTextBox" Grid.Row="2" Grid.Column="1" Margin="10,5" IsReadOnly="True" Text="http://localhost:7071/.well-known/oauth-protected-resource"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Resource Documentation:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="ResourceDocumentationTextBox" Grid.Row="3" Grid.Column="1" Margin="10,5" IsReadOnly="True" Text="https://docs.example.com/api/weather"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Supported Scopes:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="SupportedScopesTextBox" Grid.Row="4" Grid.Column="1" Margin="10,5" IsReadOnly="True" Text="mcp:tools"/>

            </Grid>
        </GroupBox>

        <!-- Tool Selection -->
        <GroupBox Grid.Row="3" Header="Available Tools" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                <ItemsControl x:Name="ToolsItemsControl" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" 
                                      IsChecked="{Binding IsEnabled}" 
                                      Margin="5,2"
                                      Checked="ToolCheckBox_Changed"
                                      Unchecked="ToolCheckBox_Changed"
                                      Tag="{Binding Guid}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Log Output -->
        <GroupBox Grid.Row="4" Header="Server Logs" Margin="10">
            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="Black"
                         Foreground="LightGray"
                         Margin="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="ClearLogsButton" Content="Clear Logs" Width="80" Height="30" Margin="5" Click="ClearLogsButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Width="80" Height="30" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>