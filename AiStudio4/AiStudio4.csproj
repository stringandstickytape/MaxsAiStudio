<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.0-preview.1.24081.1" />
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
    <None Remove="AiStudio4.Web\dist\assets\index.css" />
    <None Remove="AiStudio4.Web\dist\assets\index.js" />
    <None Remove="AiStudio4.Web\dist\index.html" />
    <None Remove="AiStudio4.Web\dist\vite.svg" />
    <None Remove="AiStudio4.Web\index.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="AiStudio4.Web\dist\assets\index.css" />
    <EmbeddedResource Include="AiStudio4.Web\dist\assets\index.js" />
    <EmbeddedResource Include="AiStudio4.Web\dist\index.html" />
    <EmbeddedResource Include="AiStudio4.Web\dist\vite.svg" />
    <EmbeddedResource Include="AiStudio4.Web\index.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.2" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3065.39" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SharedClasses\SharedClasses.csproj" />
  </ItemGroup>


	<ItemGroup>
		<EmbeddedResource Include="..\AiStudio4.Web\dist\**\*.*">
			<LogicalName>AiStudio4.WebviewResources.%(RecursiveDir)%(Filename)%(Extension)</LogicalName>
		</EmbeddedResource>
	</ItemGroup>


	<ItemGroup>
	  <None Update="AiStudio4.Web\appsettings.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

  <Target Name="BuildReactApp" BeforeTargets="PrepareForBuild">
    <Exec Command="cd $(ProjectDir)\AiStudio4.Web &amp;&amp; npm install" />
    <Exec Command="cd $(ProjectDir)\AiStudio4.Web &amp;&amp; npm run build" />
  </Target>

</Project>
