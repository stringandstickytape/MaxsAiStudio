<Window x:Class="AiStudio4.McpStandalone.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Settings" 
        Height="650" 
        Width="700" 
        MinHeight="500" 
        MinWidth="650"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <ui:Card Grid.Row="0" Margin="20,20,20,10" Padding="16">
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Settings24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <TextBlock Text="MCP Server Settings" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
        </ui:Card>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,10,20,10">
            <StackPanel>
                <!-- Server Configuration -->
                <ui:CardExpander IsExpanded="True" Margin="0,0,0,16">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="Settings24" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Server Configuration" FontWeight="SemiBold"/>
                                <TextBlock Text="Basic server settings" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="52,12,12,12">
                        <ui:TextBox Name="ServerNameBox" 
                                   PlaceholderText="Server Name"
                                   Text=""
                                   Icon="{ui:SymbolIcon Tag24}"
                                   Margin="0,0,0,8"/>
                        <ui:TextBox Name="ServerDescriptionBox" 
                                   PlaceholderText="Server Description"
                                   Text=""
                                   Icon="{ui:SymbolIcon Info24}"/>
                    </StackPanel>
                </ui:CardExpander>

                <!-- YouTube API Key -->
                <ui:CardExpander IsExpanded="True" Margin="0,0,0,16">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="Video24" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="YouTube API" FontWeight="SemiBold"/>
                                <TextBlock Text="Configure YouTube Data API v3 Key" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="52,12,12,12">
                        <ui:PasswordBox Name="YouTubeApiKeyBox" 
                                       PlaceholderText="Enter YouTube API Key"
                                       Password=""
                                       Icon="{ui:SymbolIcon Key24}"/>
                    </StackPanel>
                </ui:CardExpander>

                <!-- Azure DevOps PAT -->
                <ui:CardExpander IsExpanded="True" Margin="0,0,0,16">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="Cloud24" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Azure DevOps" FontWeight="SemiBold"/>
                                <TextBlock Text="Configure Personal Access Token" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="52,12,12,12">
                        <ui:PasswordBox Name="AzureDevOpsPATBox" 
                                       PlaceholderText="Enter Azure DevOps PAT"
                                       Password=""
                                       Icon="{ui:SymbolIcon Key24}"/>
                    </StackPanel>
                </ui:CardExpander>

                <!-- GitHub Token -->
                <ui:CardExpander IsExpanded="True" Margin="0,0,0,16">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="Code24" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="GitHub" FontWeight="SemiBold"/>
                                <TextBlock Text="Configure GitHub Personal Access Token" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="52,12,12,12">
                        <ui:PasswordBox Name="GitHubTokenBox" 
                                       PlaceholderText="Enter GitHub Token"
                                       Password=""
                                       Icon="{ui:SymbolIcon Key24}"/>
                    </StackPanel>
                </ui:CardExpander>

                <!-- Server Ports -->
                <ui:CardExpander IsExpanded="True" Margin="0,0,0,16">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="Server24" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Server Ports" FontWeight="SemiBold"/>
                                <TextBlock Text="Configure MCP and OAuth server ports" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="52,12,12,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="MCP Server Port:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <ui:NumberBox Grid.Row="0" Grid.Column="1" 
                                         Name="McpPortBox" 
                                         PlaceholderText="7071"
                                         Minimum="1024"
                                         Maximum="65535"
                                         SpinButtonPlacementMode="Inline"
                                         Icon="{ui:SymbolIcon Globe24}"
                                         Margin="0,0,0,8"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="OAuth Server Port:" VerticalAlignment="Center"/>
                            <ui:NumberBox Grid.Row="1" Grid.Column="1" 
                                         Name="OAuthPortBox" 
                                         PlaceholderText="5000"
                                         Minimum="1024"
                                         Maximum="65535"
                                         SpinButtonPlacementMode="Inline"
                                         Icon="{ui:SymbolIcon Shield24}"/>
                        </Grid>
                    </StackPanel>
                </ui:CardExpander>

                <!-- Working Directory -->
                <ui:CardExpander IsExpanded="True" Margin="0,0,0,16">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="Folder24" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Working Directory" FontWeight="SemiBold"/>
                                <TextBlock Text="Set the default project path" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="52,12,12,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0" 
                                       Name="ProjectPathBox" 
                                       PlaceholderText="Enter or browse for project path"
                                       Text=""
                                       Icon="{ui:SymbolIcon FolderOpen24}"/>
                            <ui:Button Grid.Column="1" 
                                      Content="Browse" 
                                      Name="BrowseButton" 
                                      Click="Browse_Click" 
                                      Margin="8,0,0,0"
                                      Icon="{ui:SymbolIcon FolderOpen24}"/>
                        </Grid>
                    </StackPanel>
                </ui:CardExpander>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <ui:Card Grid.Row="2" Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Save" 
                          Width="100" 
                          Height="40" 
                          Margin="0,0,10,0" 
                          Click="Save_Click" 
                          Appearance="Primary"
                          Icon="{ui:SymbolIcon Save24}"/>
                <ui:Button Content="Cancel" 
                          Width="100" 
                          Height="40" 
                          Click="Cancel_Click"
                          Icon="{ui:SymbolIcon Dismiss24}"/>
            </StackPanel>
        </ui:Card>
    </Grid>
</Window>