// chat-template.json
// maxchattemplate.json
{
  "name": "chat-template",
  "description": "A starting template for an AI-user chat",
  "input_schema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "The title of the template"
      },
      "systemPrompt": {
        "type": "string",
        "description": "A cleverly-designed system prompt instruction to the AI, settings its role and positioning it to answer the user's prompt superbly'"
      },
      "initialUserPrompt": {
        "type": "string",
        "description": "A suggested, optional inital user prompt which might inspire the user"
      }
    },
    "required": [ "title", "systemPrompt", "initialUserPrompt" ]
  }
}
